<Window x:Class="_20250217.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250217"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>

    <Canvas UseLayoutRounding="True">
      <local:Waku Canvas.Left="50" Canvas.Top="50" Width="200" Height="100"
                  BorderThickness="1" 
                  BorderBrush="MistyRose"
                  MyStrokeDash="Tomato"
                  MyStrokeDashArray="10 "
                  />
      <local:DashBorder Width="100" Height="100" Canvas.Left="200"
                        BorderThickness="4"
                        MyDashColorType="B"
                        MyLowerBrush="MistyRose"
                        MyStrokeDashArray="10 3"
                        />

      <local:DashBorder Width="50" Height="50" MyBorderThickness="3" MyDashColorType="B"/>

      <local:TextThumb MyText="AAAAAAA" BorderThickness="2"
                       Canvas.Left="120" Canvas.Top="10"
                       />
    </Canvas>

    <StackPanel>

    </StackPanel>
  </Grid>
</Window>
