<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:_20250303">




  <Style TargetType="{x:Type local:LineThumb}">
    <Style.Resources>
      <local:MyConvRectWidth x:Key="rWidth"/>
      <local:MyConvRectHeight x:Key="rHeight"/>
    </Style.Resources>
    <!--<Setter Property="Canvas.Left" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MyOffsetLeft}"/>
    <Setter Property="Canvas.Top" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MyOffsetTop}"/>-->

    <Setter Property="Width" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MyEzLine.MyBounds4.Width}"/>
    <Setter Property="Background" Value="Blue"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:LineThumb}">
          <Grid>
            <Canvas x:Name="PART_Canvas"
                    Background="{TemplateBinding Background}"
                    Width="{Binding ElementName=line, Path=MyBounds4, Converter={StaticResource rWidth}}"
                    Height="{Binding ElementName=line, Path=MyBounds4, Converter={StaticResource rHeight}}"
                    >
              <local:EzLine x:Name="line"
                            StrokeThickness="40"
                            Canvas.Left="0"
                            Canvas.Top="0"                            
                            />
              <Thumb x:Name="handle"
                     Width="20" Height="20"
                     Canvas.Left="{Binding ElementName=PART_Canvas, Path=Width}"
                     Canvas.Top="{Binding ElementName=PART_Canvas, Path=Height}"
                     />
            </Canvas>
            <Rectangle x:Name="waku"
                       Stroke="Red" StrokeThickness="1.0"/>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>




</ResourceDictionary>
