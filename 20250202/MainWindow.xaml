<Window x:Class="_20250202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250202"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid UseLayoutRounding="True">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    <Canvas>
      <local:EzLine x:Name="nemo1" Stroke="Red" StrokeThickness="10" MyPoints="0,0,100,0"/>
    </Canvas>

    <StackPanel Grid.Column="1" DataContext="{Binding ElementName=nemo1}">
      <TextBlock Text="{Binding MyBoundsWithPen}"/>
    </StackPanel>
  </Grid>
</Window>
