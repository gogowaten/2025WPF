<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:_20250409">
  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="/Themes/Dictionary1.xaml"/>
  </ResourceDictionary.MergedDictionaries>

  <Style TargetType="{x:Type local:AnchorHandleThumb}" BasedOn="{StaticResource anchorHandle}"/>


  <Style TargetType="{x:Type local:KisoThumb}" x:Key="kiso">
    <Setter Property="Canvas.Left"
            Value="{Binding RelativeSource={RelativeSource Mode=Self},
                            Path=MyActualLeft}"/>
    <Setter Property="Canvas.Top"
            Value="{Binding RelativeSource={RelativeSource Mode=Self},
                            Path=MyActualTop}"/>
    <Setter Property="Width"
            Value="{Binding RelativeSource={RelativeSource Mode=Self},
                            Path=MyInsideElementRenderBounds.Width}"/>
    <Setter Property="Height"
            Value="{Binding RelativeSource={RelativeSource Mode=Self},
                            Path=MyInsideElementRenderBounds.Height}"/>
  </Style>



  <Style TargetType="{x:Type local:TextBlockThumb}" BasedOn="{StaticResource kiso}">
    <Setter Property="Canvas.Left" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MyActualLeft}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:TextBlockThumb}">
          <Grid x:Name="insideGrid"
                DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MyItemData}"
                >
            <Canvas>
              <TextBlock x:Name="InsideElement" Text="{Binding Text}"
                         Background="MistyRose"
                         FontSize="30"/>
              <Rectangle x:Name="waku"
                         DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                         Stroke="Red"
                         StrokeThickness="1.0"
                         Width="{Binding MyInsideElementRenderBounds.Width}"
                         Height="{Binding MyInsideElementRenderBounds.Height}"/>
            </Canvas>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="{x:Type local:GeoShapeThumb}" BasedOn="{StaticResource kiso}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:GeoShapeThumb}">
          <Grid x:Name="insideGrid"
                DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MyItemData}">
            <Canvas>
              <local:GeoShapeWithAnchorHandle
                x:Name="InsideElement"
                MyPoints="{Binding Points}"
                Stroke="Red"
                StrokeThickness="40"
                MyHeadEndType="Arrow"
                />
              <Rectangle x:Name="waku"
                 DataContext="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}}"
                 Stroke="Red"
                 StrokeThickness="1.0"
                 Width="{Binding MyInsideElementRenderBounds.Width}"
                 Height="{Binding MyInsideElementRenderBounds.Height}"/>
            </Canvas>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>