<Window x:Class="_20250204_EzLineShape.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250204_EzLineShape"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    <Canvas UseLayoutRounding="True">
      <local:EzLine Canvas.Top="0" Canvas.Left="0" Opacity="0.5"
                    MyPoints="100,100,200,0,0,0,50,100"
                    Stroke="Blue" StrokeThickness="50" StrokeLineJoin="Bevel"/>

      <local:EzLine x:Name="ez" Canvas.Top="0" Canvas.Left="0" Opacity="0.5"
                    MyPoints="100,100,200,0,0,0,50,100"
                    Stroke="Red" StrokeThickness="50" StrokeLineJoin="Bevel"
                    MyAngle="40">
        <!--<local:EzLine.RenderTransform>
          <RotateTransform Angle="180"/>
        </local:EzLine.RenderTransform>-->
      </local:EzLine>
      <!--<Rectangle Width="218" Height="10" Fill="Gold" Canvas.Top="20"/>
      <Rectangle Width="109" Height="10" Fill="Gold" Canvas.Top="40"/>
      <Rectangle Width="120" Height="10" Fill="Gold" Canvas.Top="60"/>-->
      <Rectangle DataContext="{Binding ElementName=ez, Path=MyBounds1}" StrokeThickness="2" Stroke="DodgerBlue"
                 Width="{Binding Width}" Height="{Binding Height}"/>
      <Rectangle DataContext="{Binding ElementName=ez, Path=MyBounds2}" StrokeThickness="4" Stroke="Cyan"
                 Width="{Binding Width}" Height="{Binding Height}"
                 Canvas.Left="{Binding Left}" Canvas.Top="{Binding Top}"/>
      <Rectangle DataContext="{Binding ElementName=ez, Path=MyBounds3}" StrokeThickness="2" Stroke="Crimson"
                 Width="{Binding Width}" Height="{Binding Height}"
                 Canvas.Left="{Binding Left}" Canvas.Top="{Binding Top}"/>
      <Rectangle DataContext="{Binding ElementName=ez, Path=MyBounds4}" StrokeThickness="4" Stroke="Magenta"
                 Width="{Binding Width}" Height="{Binding Height}"
                 Canvas.Left="{Binding Left}" Canvas.Top="{Binding Top}"/>


    </Canvas>

    <StackPanel Grid.Column="1" DataContext="{Binding ElementName=ez}">
      <TextBlock Text="{Binding ActualWidth, StringFormat=W 0}"/>
      <TextBlock Text="{Binding ActualHeight, StringFormat=H 0}"/>
      <Separator/>
      <TextBlock Text="{Binding MyBounds1, StringFormat=Bounds1 {0: 0.0 }}" Foreground="DodgerBlue"/>
      <TextBlock Text="{Binding MyBounds2, StringFormat=Bounds2 {0: 0.0 }}" Background="Cyan"/>
      <TextBlock Text="{Binding MyBounds3, StringFormat=Bounds3 {0: 0.0 }}" Foreground="Crimson"/>
      <TextBlock Text="{Binding MyBounds4, StringFormat=Bounds4 {0: 0.0 }}" Background="Magenta"/>
      <Separator/>
      <TextBlock Text="{Binding MyPoints, StringFormat=Pints {0}}"/>
      <TextBlock Text="{Binding RenderedGeometry, StringFormat=RenderGeo {0:0}}"/>
      <Separator/>
      <TextBlock Text="{Binding MyCenterX, StringFormat=MyCenterX {0:0.0}}"/>
      <TextBlock Text="{Binding MyCenterY, StringFormat=MyCenterY {0:0.0}}"/>
      <TextBlock Text="{Binding MyAngle, StringFormat=MyAngle {0:0.0}}"/>
      <Separator/>
      <TextBlock Text="{Binding RenderTransform, StringFormat=RenderTF {0}}"/>
    </StackPanel>
  </Grid>
</Window>
