<Window x:Class="_20250120_OffsetPolyline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250120_OffsetPolyline"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    
    <Canvas>
      <local:OffsetPolyline x:Name="MyElement" Canvas.Left="0" Canvas.Top="0" Background="Gold"/>
      
      <Polyline             x:Name="MyPolyline" Canvas.Left="0" Canvas.Top="0"
                 Points="10,10 200,100" Stroke="Gold" StrokeThickness="100" Opacity="0.5"/>
      
    </Canvas>
    
    <DockPanel Grid.Column="1" DataContext="{Binding ElementName=MyElement}" >
      <GroupBox DockPanel.Dock="Top" Header="{Binding Name}">
        <StackPanel>
          <TextBlock Text="{Binding (Canvas.Left), StringFormat={}{0} left}"/>
          <TextBlock Text="{Binding (Canvas.Top), StringFormat={}{0} top}"/>
          <TextBlock Text="{Binding ActualWidth, StringFormat={}{0:0} ActualWidth}"/>
          <TextBlock Text="{Binding ActualHeight, StringFormat={}{0:0} ActualHeight}"/>
        </StackPanel>
      </GroupBox>
      <GroupBox DockPanel.Dock="Top" DataContext="{Binding MyPolyline}" Header="{Binding Name}">
        <StackPanel>
          <TextBlock Text="{Binding (Canvas.Left), StringFormat={}{0:0.0} left}"/>
          <TextBlock Text="{Binding (Canvas.Top), StringFormat={}{0:0.0} top}"/>
          <TextBlock Text="{Binding ActualWidth, StringFormat={}{0:0} ActualWidth}"/>
          <TextBlock Text="{Binding ActualHeight, StringFormat={}{0:0} ActualHeight}"/>
        </StackPanel>
      </GroupBox>

    </DockPanel>
  </Grid>
</Window>
