<Window x:Class="_20250503.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250503"
        mc:Ignorable="d"
        Title="MainWindow" Height="367" Width="654">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>

    <Canvas x:Name="MyCanvas">
      <Button Content="A Button" FontSize="50">
        <Button.Background>
          <DrawingBrush>
            <DrawingBrush.Drawing>
              <GeometryDrawing Brush="LightBlue">
                <GeometryDrawing.Geometry>
                  <GeometryGroup>
                    <EllipseGeometry RadiusX="12.5" RadiusY="25" Center="25,50" />
                    <EllipseGeometry RadiusX="12.5" RadiusY="25" Center="50,50" />
                    <EllipseGeometry RadiusX="12.5" RadiusY="25" Center="75,50" />
                  </GeometryGroup>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Pen>
                  <Pen Thickness="1" Brush="Gray" />
                </GeometryDrawing.Pen>
              </GeometryDrawing>
            </DrawingBrush.Drawing>
          </DrawingBrush>
        </Button.Background>
      </Button>

      <!--<Rectangle Fill="Red" Width="400" Height="70" Canvas.Left="20" Canvas.Top="100"/>-->

      <TextBlock Text="Opacityおぱ都市" FontSize="50" Canvas.Left="20" Canvas.Top="100">
        <TextBlock.OpacityMask>
          <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
            <GradientStop Offset="0" Color="Black"/>
            <GradientStop Offset="1" Color="Transparent"/>
          </LinearGradientBrush>
        </TextBlock.OpacityMask>
      </TextBlock>

      <Rectangle x:Name="gradient" Width="50" Height="50" Canvas.Left="200">
        <Rectangle.Fill>
          <LinearGradientBrush>
            <GradientStop Offset="0" Color="Magenta"/>
            <GradientStop Offset="1" Color="Cyan"/>
          </LinearGradientBrush>
        </Rectangle.Fill>
      </Rectangle>

      <TextBlock Text="グラデのテスト" FontSize="50" Canvas.Top="150">
        <TextBlock.Foreground>
          <!--<BitmapCacheBrush Target="{Binding ElementName=gradient}"/>-->
          <VisualBrush Visual="{Binding ElementName=gradient}"/>
        </TextBlock.Foreground>
      </TextBlock>

      
      

    </Canvas>

    <StackPanel Grid.Column="1">

    </StackPanel>
  </Grid>
</Window>
