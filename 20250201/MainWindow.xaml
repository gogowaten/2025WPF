<Window x:Class="_20250201.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250201"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>
    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
      
      <local:EzLineThumb x:Name="nemo2" Width="100" Height="100" Background="Transparent">
        <local:ItemData MyX="100" MyY="20" MyPoints="0,0,200,0" MyStroke="Gold"
                        MyStrokeThickness="20"/>
      </local:EzLineThumb>

      <local:TextBlockThumb x:Name="nemo3" FontSize="30">
        <local:ItemData MyText="aaaaaaaaaauhaa"
                        MyX="20" MyY="100"/>
      </local:TextBlockThumb>
      <!--<local:EzLine MyPoints="0,0,200,100" MyStroke="Blue"  MyStrokeThickness="20"
                    />-->
      
    </Canvas>

    <StackPanel Grid.Column="1" DataContext="{Binding ElementName=nemo3}">
      <TextBlock Text="{Binding MyData.MyX}"/>
      <TextBlock Text="{Binding ActualWidth}"/>
      <TextBlock Text="{Binding ActualHeight}"/>
      <TextBlock Text="{Binding (Canvas.Left)}"/>
      <TextBlock Text="{Binding MyData.MyPoints}"/>
      <TextBlock Text="{Binding MyData.MyStrokeThickness}"/>
      <!--<TextBlock Text="{Binding MyEzLine.MyBoundsWithPen}"/>-->
      <Button Content="test" Click="Button_Click"/>
    </StackPanel>
  </Grid>
</Window>
