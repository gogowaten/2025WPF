<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:_20250201">


  <Style TargetType="{x:Type local:KisoThumb}" x:Key="kiso">
    <Setter Property="Canvas.Left" Value="{Binding RelativeSource={RelativeSource Mode=Self},Path=MyData.MyX}"/>
    <Setter Property="Canvas.Top" Value="{Binding RelativeSource={RelativeSource Mode=Self}, Path=MyData.MyY}"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:KisoThumb}">
          <Canvas x:Name="PART_Canvas" Background="{TemplateBinding Background}">
            <Rectangle/>
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style TargetType="{x:Type local:KisoThumb}" BasedOn="{StaticResource kiso}">

  </Style>

  <Style TargetType="{x:Type local:TextBlockThumb}" BasedOn="{StaticResource kiso}">
    
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:TextBlockThumb}">
          <Canvas x:Name="PART_Canvas" Background="{TemplateBinding Background}"
                  Width="{Binding ElementName=text, Path=ActualWidth}"
                  Height="{Binding ElementName=text, Path=ActualHeight}">
            <TextBlock x:Name="text" Text="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MyData.MyText}"/>
            <Rectangle Stroke="Red" StrokeThickness="1.0"
                       Width="{Binding ElementName=text, Path=ActualWidth}"
                       Height="{Binding ElementName=text, Path=ActualHeight}"/>
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>


  <Style TargetType="{x:Type local:EzLineThumb}" BasedOn="{StaticResource kiso}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type local:EzLineThumb}">
          <Canvas x:Name="PART_Canvas" Background="{TemplateBinding Background}">
            <local:EzLine
              MyPoints="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MyData.MyPoints}"
              MyStroke="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MyData.MyStroke}"
              MyStrokeThickness="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=MyData.MyStrokeThickness}"/>
            <Rectangle Stroke="Red" StrokeThickness="1.0"
                       Width="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Width}"
                       Height="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=Height}"/>
          </Canvas>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>





</ResourceDictionary>
