            </Viewbox>
          </MenuItem.Icon>
        </MenuItem>
        <MenuItem Header="AAA" BorderBrush="MistyRose" IsSubmenuOpen="True">
          <MenuItem Header="BBB"/>
          <MenuItem Header="BBB"/>
        </MenuItem>
