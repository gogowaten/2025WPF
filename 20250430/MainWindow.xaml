          <ContextMenu>
            <ContextMenu.Template>
              <ControlTemplate>
                <TabControl>
                  <TabItem>
                    <TabItem.Header>
                      <StackPanel Orientation="Horizontal">
                        <Rectangle Fill="ForestGreen" Width="10" Height="20"/>
