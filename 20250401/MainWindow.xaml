<Window x:Class="_20250401.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250401"
        mc:Ignorable="d"
        Title="MainWindow" Height="367" Width="602">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="200"/>
    </Grid.ColumnDefinitions>

    <Canvas Background="Gray" UseLayoutRounding="True">
      <Canvas x:Name="MyCanvas" Canvas.Left="150" Canvas.Top="100">
        <Canvas.RenderTransform>
          <RotateTransform Angle="30"/>
        </Canvas.RenderTransform>
        <Rectangle x:Name="MyRed" Canvas.Left="100" Canvas.Top="10" Fill="Red" Width="50" Height="50">
          <Rectangle.RenderTransform>
            <RotateTransform Angle="50"/>
          </Rectangle.RenderTransform>
        </Rectangle>
      </Canvas>
      <Rectangle x:Name="MyOrangeBounds" Stroke="Orange"/>
      <Rectangle x:Name="MyBlueBounds" Stroke="Cyan"/>
      <Rectangle x:Name="MyGreenBounds" Stroke="Lime"/>
      <Rectangle x:Name="MyWhiteBounds" Stroke="White"/>
      <Rectangle x:Name="MyMurasakiBounds" Stroke="Red"/>
    </Canvas>

    <StackPanel Grid.Column="1">

    </StackPanel>
  </Grid>
</Window>
