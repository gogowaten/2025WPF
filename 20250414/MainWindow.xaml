<Window x:Class="_20250414.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_20250414"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Window.Resources>
    <Style x:Key="rect" TargetType="Rectangle">
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
    </Style>
  </Window.Resources>
    <Grid>
    <Canvas>
      <Rectangle Style="{StaticResource rect}" Fill="Red" Canvas.Left="100">
        <Rectangle.RenderTransform>
          <TransformGroup>
            <RotateTransform Angle="20"/>
            <ScaleTransform ScaleX="2" ScaleY="1"/>
          </TransformGroup>
        </Rectangle.RenderTransform>
      </Rectangle>
      <Rectangle x:Name="MyRectBlue" Style="{StaticResource rect}" Fill="Blue" Canvas.Left="100" Canvas.Top="200"/>
      <Rectangle x:Name="MyRectCyan" Style="{StaticResource rect}" Fill="Cyan" Canvas.Left="300" Canvas.Top="200"/>
    </Canvas>
    </Grid>
</Window>
